---
import Section from '../components/Section.astro';
import Questions from '../content/qa/questions.json'
---
<Section>
  <header>
    <h2>Preguntas frecuentes</h2>
  </header>
  <ul>
    {
      Questions.cbd.map(question => (
        <li>
          <h3>{question.pregunta}</h3>
          <p class="parrafo">{question.persuasion}</p>
        </li>
      ))
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin: 0;
    padding: 0;
  }
  li {
    border: 1px solid #212121;
    padding: 0.1rem 1rem;
    border-radius: 1rem;
    margin: 0;
    list-style: none;
  }
</style>